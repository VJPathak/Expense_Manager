<html>

    <head>
        <title> Account  </title>
    </head>

    <style>
 
        te {
            width: 50%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }

        input[type=text], select {
          width: 50%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        
        input[type=submit] {
          width: 50%;
          background-color: #808080;
          color: white;
          padding: 14px 20px;
          margin: 8px 0;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
        
        input[type=submit]:hover {
          background-color: #808080;
          color: black;
        }
        
        .div1 {
          border-radius: 5px;
          background-color: #FF6F61;
          padding: 20px;
          width: 50%;
          opacity: 80%;
        }

        body {
        background-color: #92A8D1; 
       /* background-color: #FF6F61;*/
        }
         
        </style>

    <body>
        <br><br><br><br><br><br>
        <center>
            <div class = "div1">
            <form method="POST" action="/account"> 
            <label>Account Name</label><br> 
            <input type="text" name="accountName" placeholder="Enter Account Name"><br>


            <label>Press If Its Group Account ?</label><br> 
            <input type="checkbox" name="personal" value="0"  onclick="OnChangeCheckbox (this)"ID="chkAssociation"/><br>
            <!-- <input type="textbox" Id="txtToggle" > -->


            <label for="names" style="display: none;" id="txtToggle4">Choose Members:</label><br>

            <select id="txtToggle" name="memNames" style="display: none;"  multiple>

                <%
                for ( var i = 0; i < names.length; i++ )
                {
                    
                    %><option value="<%=names[i] %>"> <%=names[i] %> </option><%
                }
                %>
                </select>


            <script type="text/javascript">
                function OnChangeCheckbox (checkbox) {
                    if (checkbox.checked) {
                        document.getElementById('txtToggle').style.display="block"; 
                        document.getElementById('txtToggle1').style.display="none"; 
                        document.getElementById('txtToggle2').style.display="none"; 
                        document.getElementById('txtToggle4').style.display="block"; 
                    }
                    else {
                        document.getElementById('txtToggle').style.display="none"; 
                        document.getElementById('txtToggle1').style.display="block";
                        document.getElementById('txtToggle2').style.display="none"; 
                        document.getElementById('txtToggle4').style.display="none";  
                    }
                }
                
               </script>



            <label id="txtToggle2" style="display: block;">Income</label><br> 
            <input type="text" name="income" placeholder="Enter Income" style="display: block;" id="txtToggle1" ><br>
            
            <input type="submit" name="submit" value="Create Account">    
            </form> 
            </div>
            </center>
            

    </body>

</html>